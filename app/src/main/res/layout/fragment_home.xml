<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/etv_service_number"
            style="@style/Base.Widget.AppCompat.EditText"
            android:layout_width="250dp"
            android:layout_height="@dimen/spacing_xbig"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_black_outline"
            android:drawableEnd="@drawable/ic_outline_person_black_24dp"
            android:hint="@string/service_number_hint"
            android:inputType="text"
            android:maxLength="10"
            android:minHeight="@dimen/spacing_xmlarge"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large"
            android:singleLine="true"
            android:textAlignment="center" />



    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_mlarge" />

        <EditText
            android:id="@+id/etv_current_meter"
            style="@style/Base.Widget.AppCompat.EditText"
            android:layout_width="250dp"
            android:layout_height="@dimen/spacing_xbig"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_black_outline"
            android:drawableEnd="@drawable/ic_electricity_traction"
            android:hint="@string/current_meter_hint"
            android:inputType="numberSigned"
            android:minHeight="@dimen/spacing_xmlarge"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large"
            android:singleLine="true"
            android:textAlignment="center" />


        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_mlarge" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="150dp"
            android:layout_height="@dimen/spacing_big"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_rounded_primary"
            android:paddingLeft="@dimen/spacing_mlarge"
            android:paddingRight="@dimen/spacing_mlarge"
            android:text="@string/submit_button"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>